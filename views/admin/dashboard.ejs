<% include('../layouts/header.ejs') %>

        <h3 class="text-center font-weight-bold">Dashboard</h3>
        <a href="/admin/newuser" class="btn btn-primary mb-3">Add New User</a>

        <form action="">
            <div class="input-group mb-3">
                <input type="search" name="search" class="form-control" placeholder="Search users here">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>

        <table class="table table-light table-striped">
            <thead>
                <tr>
                    <th>NAME</th>
                    <th>EMAIL</th>
                    <th>MOBILE</th>
                    <th>ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                <% if (users.length> 0) {
                    for (let i = 0; i < users.length; i++) { %>
                        <tr>
                            <td>
                                <%= users[i].name %>
                            </td>
                            <td>
                                <%= users[i].email %>
                            </td>
                            <td>
                                <%= users[i].mobile %>
                            </td>
                            <td>
                                <a href="/admin/edituser?id=<%= users[i]._id %>" class="btn btn-info btn-sm">Edit</a>
                                <a href="/admin/deleteuser?id=<%= users[i]._id %>"
                                    class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                        <% } } else { %>
                            <tr>
                                <td colspan="4">Users not found</td>
                            </tr>
                            <% } %>
            </tbody>
        </table>

        <a href="/admin/home" class="btn btn-info">Go To Home</a>
    </div>


